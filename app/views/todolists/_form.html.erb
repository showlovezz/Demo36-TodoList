<section id="section_todolist_form">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">

        <div class="card">
          <%= form_for @todolist do |f| %>
            <% if @todolist.errors.any? %>
              <h2>We have some errors here!</h2>
              <ul>
                <% @todolist.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            <% end %>
            <h1 class="text-center">New TodoList</h1>

            <div class="form-group text-muted">
              <%= f.label :title, "Title" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group text-muted">
              <%= f.label :description, "Description" %>
              <%= f.text_area :description, class: "form-control", rows: "10" %>
            </div>

            <%= f.submit class: "btn btn-secondary" %>
          <% end %>
          <%= link_to "Back", todolists_path, class: "text-center btn btn-link" %>
        </div>

      </div>
    </div>
  </div>
</section>

